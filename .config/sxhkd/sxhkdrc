alt + Return
        kitty --single-instance
        # alacritty

alt + Escape
        bspc node --to-desktop prev

alt + {_,shift + } Tab
	bspc node -f {next,prev}.local

super + {h,j,k,l}
        bspc node -f {west,south,north,east}

super + Escape
	pkill -USR1 -x sxhkd

super + L
        bspc       

super + space

	rofi -show run -font "consolas 20"
alt + BackSpace
	bspc node -c

alt + button{1-3}
        bspc pointer --grab {move,resize_side,resize_corner}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'